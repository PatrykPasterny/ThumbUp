@model IEnumerable<ThumbUp.Models.Localization>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LocID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LocID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
